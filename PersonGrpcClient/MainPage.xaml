<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     x:Class="PersonGrpcClient.MainPage"
     BackgroundColor="{AppThemeBinding Light=White, Dark=Black}">

    <Grid RowDefinitions="Auto,*" 
      Padding="20">

        <!-- Cabeçalho com Status e Botões -->
        <Grid Grid.Row="0" 
          ColumnDefinitions="Auto,*,Auto,Auto,Auto,Auto,Auto,Auto"
          Margin="0,0,0,20">


            <!-- Status de Conexão -->
            <Label Grid.Column="0"
        Text="{Binding ConnectionStatusText}"
        TextColor="{Binding ConnectionStatusColor}"
        VerticalOptions="Center"/>

            <!-- Espaçador -->
            <StackLayout Grid.Column="1"/>

            <!-- Sync All Button -->
        <Button Grid.Column="2"
             Text="↓ Sync All (gRPC)"
             Command="{Binding SyncAllDataCommand}"
             BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
             TextColor="White"
             FontSize="14"
             Padding="10,5"
             CornerRadius="5"
             Margin="10,0"
             IsEnabled="{Binding IsNotBusy}"/>

            <Button Grid.Column="3"
                 Text="↓ Sync All (REST)"
                 Command="{Binding SyncAllRestCommand}"
                 BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                 TextColor="White"
                 FontSize="14"
                 Padding="10,5"
                 CornerRadius="5"
                 Margin="10,0"
                 IsEnabled="{Binding IsNotBusy}"/>  

            <!-- Randomize Button -->
         <Button Grid.Column="4"
             Text="🎲 Randomize Data"
             Command="{Binding RandomizeDataCommand}"
             BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
             TextColor="White"
             FontSize="14"
             Padding="10,5"
             CornerRadius="5"
             Margin="10,0"
             IsEnabled="{Binding IsNotBusy}"/>
            
            <!-- Sync Changes Button -->
            <Button Grid.Column="5"
            Text="↑ Sync Changes (gRPC)"
            Command="{Binding SyncChangesCommand}"
            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
            TextColor="White"
            FontSize="14"
            Padding="10,5"
            CornerRadius="5"
            Margin="10,0"
            IsEnabled="{Binding IsNotBusy}"/>

            <Button Grid.Column="6"
                Text="↑ Sync Changes (REST)"
                Command="{Binding SyncChangesRestCommand}"
                BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                TextColor="White"
                FontSize="14"
                Padding="10,5"
                CornerRadius="5"
                Margin="10,0"
                IsEnabled="{Binding IsNotBusy}"/>

            <!-- Clear Data Button -->
        <Button Grid.Column="7"
             Text="🗑️ Clear Data"
             Command="{Binding ClearDataCommand}"
             BackgroundColor="Red"
             TextColor="White"
             FontSize="14"
             Padding="10,5"
             CornerRadius="5"
             IsEnabled="{Binding IsNotBusy}"/>
        </Grid>

        <!-- Lista de Registros -->
        <Grid Grid.Row="1" 
          RowDefinitions="Auto,*,Auto">

            <!-- Título da Lista -->
            <Label Grid.Row="0"
               Text="People Records"
               FontSize="24"
               FontAttributes="Bold"
               Margin="0,0,0,10"/>

            <!-- CollectionView com os Registros -->
            <CollectionView Grid.Row="1"
           ItemsSource="{Binding SyncedPeople}"
           EmptyView="No records found">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5"
               Padding="15"
               BorderColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
               CornerRadius="10">
                            <Grid RowDefinitions="Auto,Auto"
                  ColumnDefinitions="*,Auto">

                                <!-- Informações Principais -->
                                <VerticalStackLayout Grid.Row="0" 
                                   Grid.Column="0"
                                   Spacing="5">
                                    <Label Text="{Binding Name}"
                           FontSize="18"
                           FontAttributes="Bold"/>
                                    <Label Text="{Binding LastName}"
                           FontSize="16"/>
                                    <HorizontalStackLayout Spacing="15">
                                        <Label Text="{Binding Age, StringFormat='Age: {0}'}"
                               FontSize="14"/>
                                        <Label Text="{Binding Weight, StringFormat='Weight: {0:F1}kg'}"
                               FontSize="14"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <!-- IDs -->
                                <VerticalStackLayout Grid.Row="0"
                                   Grid.Column="1"
                                   HorizontalOptions="End"
                                   Spacing="5">
                                    <Label Text="{Binding ServerId, StringFormat='PostgreSQL ID: {0}'}"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"/>
                                    <Label Text="{Binding Id, StringFormat='SQLite ID: {0}'}"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"/>
                                </VerticalStackLayout>

                                <!-- Data Info -->
                                <StackLayout Grid.Row="1"
                           Grid.ColumnSpan="2"
                           Orientation="Horizontal"
                           Spacing="15"
                           Margin="0,10,0,0">
                                    <Label Text="{Binding CreatedAt, StringFormat='Created: {0:g}'}"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"/>
                                    <Label Text="{Binding LastSyncAttempt, StringFormat='Last Sync: {0:g}'}"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"/>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Controles de Paginação -->
            <Grid Grid.Row="2" 
              ColumnDefinitions="Auto,*,Auto"
              Margin="0,10,0,0">
                <Button Grid.Column="0"
        Text="Previous"
        Command="{Binding PreviousPageCommand}"
        IsEnabled="{Binding CanGoPrevious}"/>

                <Label Grid.Column="1"
       Text="{Binding PaginationInfo}"
       HorizontalOptions="Center"
       VerticalOptions="Center"/>

                <Button Grid.Column="2"
        Text="Next"
        Command="{Binding NextPageCommand}"
        IsEnabled="{Binding CanGoNext}"/>
            </Grid>
        </Grid>

        <!-- Indicador de Atividade -->
        <ActivityIndicator Grid.RowSpan="2"
                      IsRunning="{Binding IsBusy}"
                      IsVisible="{Binding IsBusy}"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"/>
    </Grid>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
         x:Class="PersonGrpcClient.MainPage"
         BackgroundColor="{AppThemeBinding Light=White, Dark=Black}">

    <!-- Layout Principal em Grid -->
    <Grid ColumnDefinitions="*, *" 
      Padding="20"
      ColumnSpacing="20">

        <!-- Coluna Esquerda - Formulário -->
        <VerticalStackLayout Grid.Column="0" 
                        Spacing="20">

            <!-- Título do Formulário -->
            <Label Text="New Person"
               FontSize="24"
               FontAttributes="Bold"/>

            <!-- Formulário -->
            <VerticalStackLayout Spacing="15">
                <VerticalStackLayout Spacing="5">
                    <Label Text="First Name"
                       FontSize="14"/>
                    <Entry Text="{Binding Name}"
                       Placeholder="Enter first name"/>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Last Name"
                       FontSize="14"/>
                    <Entry Text="{Binding LastName}"
                       Placeholder="Enter last name"/>
                </VerticalStackLayout>

                <Grid ColumnDefinitions="*, *" 
                  ColumnSpacing="15">
                    <VerticalStackLayout Grid.Column="0" 
                                   Spacing="5">
                        <Label Text="Age"
                           FontSize="14"/>
                        <Entry Text="{Binding Age, StringFormat='{0}'}"
                           Placeholder="Enter age"
                           Keyboard="Numeric"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout 
                        Grid.Column="1" 
                         Spacing="5">
                        <Label Text="Weight (kg)"
                           FontSize="14"/>
                        <Entry Text="{Binding Weight, StringFormat='{0}'}"
                           Placeholder="Enter weight"
                           Keyboard="Numeric"/>
                    </VerticalStackLayout>
                </Grid>

                <Button Text="Save Person"
                    Command="{Binding SaveCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    CornerRadius="5"
                    WidthRequest="200"
                        HorizontalOptions="End"
                    Margin="0,10"/>

                <ActivityIndicator IsRunning="{Binding IsBusy}"
                             IsVisible="{Binding IsBusy}"
                             HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </VerticalStackLayout>

        <!-- Coluna Direita - Registros -->
        <Grid Grid.Column="1" 
          RowDefinitions="Auto, *, Auto, *">

            <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto">
                <Label Grid.Column="0"
                   Text="{Binding ConnectionStatusText}"
                   TextColor="{Binding ConnectionStatusColor}"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"/>
                <Button Grid.Column="1"
                    Text="🗑️ Clear Local Data"
                    Command="{Binding ClearDataCommand}"
                    BackgroundColor="Red"
                    TextColor="White"
                    FontSize="14"
                    Padding="10,5"
                    CornerRadius="5"
                    Margin="10,0"/>
            </Grid>

            <!-- Registros Sincronizados -->
            <VerticalStackLayout Grid.Row="1" Spacing="10">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="✅" 
           FontSize="20"
           VerticalOptions="Center"/>
                    <Label Text="Synced Records"
           FontSize="20"
           FontAttributes="Bold"
           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}"/>
                </HorizontalStackLayout>

                <CollectionView ItemsSource="{Binding SyncedPeople}"
                EmptyView="No synced records"
                HeightRequest="200">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout>
                                <Grid Padding="10" 
                      ColumnDefinitions="*, Auto"
                      Margin="0,5">
                                    <VerticalStackLayout Grid.Column="0" 
                                       Spacing="5">
                                        <Label Text="{Binding Name}"
                               FontAttributes="Bold"/>
                                        <Label Text="{Binding LastName}"/>
                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="{Binding Age, StringFormat='Age: {0}'}"/>
                                            <Label Text="{Binding Weight, StringFormat='Weight: {0:F1}kg'}"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>

                                    <Label Grid.Column="1"
                           Text="{Binding DetailedStatus}"
                           FontSize="12"
                           VerticalOptions="Center"/>
                                </Grid>

                                <!-- Separador -->
                                <BoxView HeightRequest="1"
                        Margin="10,0"
                        Opacity="0.2"
                        Color="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray600}}"/>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <!-- Registros Pendentes -->
            <VerticalStackLayout Grid.Row="3" Spacing="10">
                <!-- Cabeçalho com Título e Botão Sync -->
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <!-- Título com ícone -->
                    <HorizontalStackLayout Grid.Column="0" 
                         Spacing="10">
                        <Label Text="🕒" 
               FontSize="20"
               VerticalOptions="Center"/>
                        <Label Text="Pending Records"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}"/>
                    </HorizontalStackLayout>

                    <!-- Botão Sync Now -->
                    <Button Grid.Column="2"
            Text="🔄 Sync Now"
            Command="{Binding SyncNowCommand}"
            IsVisible="{Binding HasPendingRecords}"
            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
            TextColor="White"
            FontSize="14"
            Padding="10,5"
            CornerRadius="5"
            Margin="0,0,0,5"/>
                </Grid>

                <CollectionView ItemsSource="{Binding PendingPeople}"
                EmptyView="No pending records"
                HeightRequest="200">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout>
                                <Grid Padding="10" 
                      ColumnDefinitions="*, Auto"
                      Margin="0,5">
                                    <VerticalStackLayout Grid.Column="0" 
                                       Spacing="5">
                                        <Label Text="{Binding Name}"
                               FontAttributes="Bold"/>
                                        <Label Text="{Binding LastName}"/>
                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="{Binding Age, StringFormat='Age: {0}'}"/>
                                            <Label Text="{Binding Weight, StringFormat='Weight: {0:F1}kg'}"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>

                                    <Label Grid.Column="1"
                           Text="{Binding DetailedStatus}"
                           FontSize="12"
                           VerticalOptions="Center"/>
                                </Grid>

                                <!-- Separador -->
                                <BoxView HeightRequest="1"
                        Margin="10,0"
                        Opacity="0.2"
                        Color="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray600}}"/>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
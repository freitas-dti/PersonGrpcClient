<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PersonGrpcClient"
             xmlns:converters="clr-namespace:PersonGrpcClient.Converters"
             x:Class="PersonGrpcClient.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:StringLengthToBoolConverter x:Key="StringLengthToBoolConverter"/>
            <converters:NumericValidationConverter x:Key="NumericValidationConverter"/>
            <converters:NullableValueConverter x:Key="NullableValueConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
